<%= simple_form_for(@location, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :longitude %>
    <%= f.input :latitude %>
    <%= f.input :radius %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
		<%= link_to t('main.cancel'), locations_path, class: 'btn' %>
  </div>
<% end %>
