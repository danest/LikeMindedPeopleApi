<div class="page-header">
	<h1><%= t 'title.all' %> <%= t('activerecord.models.users') %></h1>
</div>

<%= link_to t('title.new') + ' ' + t('activerecord.models.user'), new_user_path, :class => 'btn btn-primary pull-right' %>
<br/><br/>

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
						<th><%= t('activerecord.attributes.user.name') %></th>
						<th><%= t('activerecord.attributes.user.last_name') %></th>
						<th><%= t('main.options') %></th>
		</tr>
	</thead>

	<tbody>
		<%= content_tag_for(:tr, @users) do |user| %>
						<td><%= user.name %></td>
						<td><%= user.last_name %></td>
						<td>
				<%= link_to raw('<i class="icon-eye-open"></i>'), user %>
				<%= link_to raw('<i class="icon-edit"></i>'), edit_user_path(user) %>
				<%= link_to raw('<i class="icon-remove"></i>'), user, confirm: t('main.confirm'), method: :delete %>
			</td>
		<% end %>
	</tbody>
</table>
