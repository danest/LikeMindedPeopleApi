<%= simple_form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :last_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
		<%= link_to t('main.cancel'), users_path, class: 'btn' %>
  </div>
<% end %>
