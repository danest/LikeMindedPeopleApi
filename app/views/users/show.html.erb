<div class="page-header">
	<h1><%= t('activerecord.models.user') %></h1>
</div>

<p>
  <b><%= t('activerecord.attributes.user.name') %>:</b>
  <%= @user.name %>
</p>
<p>
  <b><%= t('activerecord.attributes.user.last_name') %>:</b>
  <%= @user.last_name %>
</p>

<div class="form-actions">
	<%= link_to t('main.edit'), edit_user_path(@user), class: 'btn btn-primary' %>
	<%= link_to t('main.cancel'), users_path, class: 'btn' %>
</div>
