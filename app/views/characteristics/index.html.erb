<div class="page-header">
	<h1><%= t 'title.all' %> <%= t('activerecord.models.characteristics') %></h1>
</div>

<%= link_to t('title.new') + ' ' + t('activerecord.models.characteristic'), new_characteristic_path, :class => 'btn btn-primary pull-right' %>
<br/><br/>

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
						<th><%= t('activerecord.attributes.characteristic.key') %></th>
						<th><%= t('activerecord.attributes.characteristic.attributeCategories') %></th>
						<th><%= t('main.options') %></th>
		</tr>
	</thead>

	<tbody>
		<%= content_tag_for(:tr, @characteristics) do |characteristic| %>
						<td><%= characteristic.key %></td>
						<td><%= characteristic.attributeCategories %></td>
						<td>
				<%= link_to raw('<i class="icon-eye-open"></i>'), characteristic %>
				<%= link_to raw('<i class="icon-edit"></i>'), edit_characteristic_path(characteristic) %>
				<%= link_to raw('<i class="icon-remove"></i>'), characteristic, confirm: t('main.confirm'), method: :delete %>
			</td>
		<% end %>
	</tbody>
</table>
