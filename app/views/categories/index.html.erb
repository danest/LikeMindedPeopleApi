<div class="page-header">
	<h1><%= t 'title.all' %> <%= t('activerecord.models.categories') %></h1>
</div>

<%= link_to t('title.new') + ' ' + t('activerecord.models.category'), new_category_path, :class => 'btn btn-primary pull-right' %>
<br/><br/>

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
						<th><%= t('activerecord.attributes.category.name') %></th>
						<th><%= t('main.options') %></th>
		</tr>
	</thead>

	<tbody>
		<%= content_tag_for(:tr, @categories) do |category| %>
						<td><%= category.name %></td>
						<td>
				<%= link_to raw('<i class="icon-eye-open"></i>'), category %>
				<%= link_to raw('<i class="icon-edit"></i>'), edit_category_path(category) %>
				<%= link_to raw('<i class="icon-remove"></i>'), category, confirm: t('main.confirm'), method: :delete %>
			</td>
		<% end %>
	</tbody>
</table>
