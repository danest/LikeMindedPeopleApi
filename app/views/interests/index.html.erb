<div class="page-header">
	<h1><%= t 'title.all' %> <%= t('activerecord.models.interests') %></h1>
</div>

<%= link_to t('title.new') + ' ' + t('activerecord.models.interest'), new_interest_path, :class => 'btn btn-primary pull-right' %>
<br/><br/>

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
						<th><%= t('activerecord.attributes.interest.name') %></th>
						<th><%= t('activerecord.attributes.interest.category') %></th>
						<th><%= t('activerecord.attributes.interest.fb_id') %></th>
						<th><%= t('main.options') %></th>
		</tr>
	</thead>

	<tbody>
		<%= content_tag_for(:tr, @interests) do |interest| %>
						<td><%= interest.name %></td>
						<td><%= interest.category %></td>
						<td><%= interest.fb_id %></td>
						<td>
				<%= link_to raw('<i class="icon-eye-open"></i>'), interest %>
				<%= link_to raw('<i class="icon-edit"></i>'), edit_interest_path(interest) %>
				<%= link_to raw('<i class="icon-remove"></i>'), interest, confirm: t('main.confirm'), method: :delete %>
			</td>
		<% end %>
	</tbody>
</table>
