<%= simple_form_for(@interest, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :fb_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
		<%= link_to t('main.cancel'), interests_path, class: 'btn' %>
  </div>
<% end %>
